{
  "name": "back-end-dev-test",
  "version": "1.0.0",
  "author": "Luan Bodner do RosÃ¡rio",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "env $(cat .env) nest start --watch",
    "start": "node dist/Main",
    "test": "env $(cat .env) jest --no-cache --detectOpenHandles --forceExit",
    "commit": "npx git-cz",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config dist/configurations/MigrationConfiguration.js",
    "migrate": "rm -rf dist && yarn build && yarn typeorm migration:run",
    "docker-run": "rm -rf dist && yarn build && sudo docker-compose up -d --build --force-recreate",
    "prettier": "yarn --silent prettier:js && git update-index --again",
    "prettier:check": "echo '>> Running Prettier checks...' && prettier --check '**/*.js*'",
    "prettier:js": "echo '>> Running Prettier fixes...' && prettier --write '**/*.js*' --loglevel warn"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "echo '>> Pre-commit checks' && lint-staged && yarn prettier"
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/typeorm": "^7.1.5",
    "body-parser": "^1.19.2",
    "ejs": "^3.1.6",
    "joi": "^17.4.0",
    "nestjs-joi": "^1.3.4",
    "npm": "^8.11.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@devniel/nestjs-typeorm-testing": "^0.1.3-alpha",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/json2csv": "^5.0.3",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
