{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true,
	},
	"exclude": ["node_modules"],
	"include": ["**/*"]
}
