{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@app/*": ["./src/app/*"],
			"@main/*": ["./src/main/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true
	},
	"include": ["src"]
}
